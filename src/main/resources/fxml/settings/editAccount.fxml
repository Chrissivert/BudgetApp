<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" prefHeight="262.0" prefWidth="373.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="Edit Account">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #cbd3db; -fx-background-radius: 15px; -fx-border-radius: 15px;">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Account Name" />
                <TextField fx:id="nameField">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
            </children>
            <padding>
                <Insets left="5.0" right="5.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #cbd3db; -fx-background-radius: 15px; -fx-border-radius: 15px;">
            <Label alignment="CENTER" contentDisplay="CENTER" text="Account Balance" />
            <TextField fx:id="balanceField">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </TextField>
        </HBox>
        <Button fx:id="addButton" mnemonicParsing="false" text="Save Account" />
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>

